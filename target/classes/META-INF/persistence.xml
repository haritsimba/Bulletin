<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence">
  <persistence-unit name="Bulletin">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.project.bulletin.persistence.condamnation.Condamnation</class>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.user" value="dazai"/>
      <property name="jakarta.persistence.jdbc.password" value="dazai"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Bulletin"/>
    </properties>
  </persistence-unit>
</persistence>
